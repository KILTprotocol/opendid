{
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "extends": [
                "plugin:import/recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "parserOptions": {
                "ecmaVersion": 2020,
                "sourceType": "module"
            },
            "rules": {
                "@typescript-eslint/no-unused-vars": "error"
            },
            "settings": {
                "import/resolver": {
                    "typescript": {}
                }
            }
        },
        {
            "files": [
                "*.html"
            ],
            "plugins": [
                "@html-eslint"
            ],
            "parser": "@html-eslint/parser",
            "extends": [
                "plugin:@html-eslint/recommended"
            ]
        },
        {
            "files": [
                "*.js"
            ],
            "extends": [
                "eslint:recommended"
            ],
            "parserOptions": {
                "ecmaVersion": 12,
                "sourceType": "module"
            },
            "env": {
                "browser": true
            },
            "rules": {
                "no-unused-vars": [
                    "error"
                ],
                "prefer-const": [
                    "error"
                ]
            }
        }
    ]
}
